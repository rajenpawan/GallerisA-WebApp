  <div class="container-fluid">
    <button style="float:right; display:inline;" type="button" class="navbar-toggle" data-toggle="collapse" data-target="#mainNav">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
  </div>
    <div class="collapse navbar-collapse" id="mainNav">
      <ul class="nav navbar-nav navbar-right">
        <% if(!currentUser){ %>
          <li><a id="arch" href="/login"><span class="glyphicon glyphicon-log-in"></span>Login</a></li>
          <li><a id="arch" href="/register"><span class="glyphicon glyphicon-user"></span>Sign Up</a></li>
        <% } else {%>
          <li><image src="<%= currentUser.avatar%>" id="menu1" style="height:3em; width:auto; border-radius:5px;" class="rounded-circle"></image></li>
          <li><a id="arch" href="/users/<%= currentUser._id %>">Signed in as <strong><%= currentUser.username %></strong></a></li>
          <li><a id="arch" href="/logout"><span class="glyphicon glyphicon-off"></span> Logout</a></li>
        <% } %>
      </ul>

    </div>
  </div>
</nav>
</header>

</body>


<!-- Edit campgrounds -->
<div class="container spa">
    <div class="row">
        <h1 style="text-align: center">Edit: <%= campground.name %></h1>
        <div style="width:60%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" placeholder="name..." value="<%= campground.name %>" autofocus required>
                </div>
                  <div class="form-group">
                    <input class="form-control" type="number" name="campground[price]" placeholder="price..." value="<%= campground.price %>" min="0.01" step="0.01" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[image]" placeholder="image-url.." value="<%= campground.image %>" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[description]" placeholder="description..." value="<%= campground.description %>" required>
                </div>
                <button id="arch" class="btn btn-lg btn-primary btn-block" type="submit" >Submit!</button>
            </form>
            <a id="arch" href="/campgrounds/<%= campground._id%>">Go Back</a>
        </div>
    </div>
</div>


<br /><br />
<footer>
  <p>
    GallerisA, copyright &copy; 2017  </p>
</footer>
</html>
