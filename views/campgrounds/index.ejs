 <!DOCTYPE html>
 <html lang="en">
 <head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width" >
   <title>GallerisA | Home</title>
   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
   <!-- <link rel="stylesheet" href="/stylesheets/main.css"> -->

   <link rel = "stylesheet" href="/stylesheets/amco.css" />
   <link href="https://fonts.googleapis.com/css?family=Architects+Daughter" rel="stylesheet">

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" type="text/javascript"></script>

 </head>

 <body>
   <header>
     <div class="container-fluid" id="arch" >
       <div id="branding">
         <h1><a href="/"><span style="font-size:23px" class="highlight">GallerisA</span></a></h1>
       </div>
       <nav style="float:left; display:inline;">
         <ul >
           <li><a  href="/campgrounds">Home</a></li>
           <li><a  href="">About</a></li>
         </ul>
       </nav>
       <nav style="float:right; display:inline;">
         <ul class="tid">
           <% if(!currentUser){ %>
            <li ><a id="arch" href="/login"><span class="glyphicon glyphicon-log-in"></span> LogIn</a></li>
            <li ><a id="arch" href="/register"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
           <% } else { %>
           <li  ><image src="<%= currentUser.avatar %>"  id="menu1" style= " height:3em; width:auto; border-radius: 5px;" class="rounded-circle"></image></li>
            <li ><a id="arch" href="/users/<%= currentUser._id %>">Signed In As <strong> <%= currentUser.username %></strong></a></li>
            <li ><a id="arch" href="/logout"><span class="glyphicon glyphicon-off"></span> LogOut</a></li>
           <% } %>
         </ul>

       </nav>

         <nav  class="navbar-default navbar-static-top">
       <div class="container-fluid">

              <button style="float:right; display:inline;" type="button" class="navbar-toggle" data-toggle="collapse" data-target="#mainNav">
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
              </button>
              </div>
              <div class="collapse navbar-collapse" id="mainNav">
                  <ul class="nav navbar-nav navbar-right" >
                     <% if(!currentUser){ %>
                      <li ><a id="arch" href="/login"><span class="glyphicon glyphicon-log-in"></span> LogIn</a></li>
                      <li ><a id="arch" href="/register"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                     <% } else { %>
                     <li  ><image src="<%= currentUser.avatar %>"  id="menu1" style= " height:3em; width:auto; border-radius: 5px;" class="rounded-circle"></image></li>
                      <li ><a id="arch" href="/users/<%= currentUser._id %>">Signed In As <strong> <%= currentUser.username %></strong></a></li>
                      <li ><a id="arch" href="/logout"><span class="glyphicon glyphicon-off"></span> LogOut</a></li>
                     <% } %>
                  </ul>
           </div>
       </div>
       </nav>
       </header>

<!-- Home -->
<br />
<div class="container-fluid">
<div class="jumbotron" style="padding: 1px 0px 1px 1px; box-shadow: 0.4px 0.4px 2px 2px">
    <div class="carousel slide" data-interval="4000"  id="mycarousel" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#mycarousel" data-slide-to="0" class="active" ></li>
        <% campgrounds.forEach(function(campground){ %>
        <li data-target="#mycarousel" data-slide-to="campground" ></li>
        <% }); %>
        <!--<li data-target="#mycarousel" data-slide-to="2" ></li>-->
        </ol>
    <h1 id="arch" style="text-align:center; color:black">Welcome To GalleriesA</h1>
    <div class="carousel-inner" role="listbox" style="display:block; margin-left: auto; margin-right: auto; min-height:200px; max-height:400px;  width:80%; ">
        <div class="item active" id = "ii">
            <style>
                #ii{
                background: linear-gradient( rgba(250,0,0,0.5), rgba(150,1,5,0.9));
                height: 300px;
                }
            </style>
                <h2 id="arch" style="color:white; padding-top:15%; text-align:center;">View our hand-picked Galleries from all over the World</h2>
            </div>
        <% campgrounds.forEach(function(campground){ %>
        <div class="item " >
            <img  class="img-responsive "  src="<%= campground.image %>" >
        </div>
        <% }); %>
        </div>
    </div>
    <div class="container-fluid">

    <!--<p id="arch" >View our hand-picked Galleries from all over the World</p>-->
    <p>
        <hr style="box-shadow: 0px 0.6px;">
    <a id="arch" style="margin-left:40%" class="btn btn-primary btn-lg" href="/campgrounds/new">Add Galleries</a>
    </p>
    </div>
</div>
</div>

    <div class="row text-center" style="display: flex; flex-wrap: wrap; margin: 4px 4px 4px 4px ">
        <% campgrounds.forEach(function(campground){ %>
        <div class=".col-sm-6 col-md-4 col-lg-3">
            <div id="com" class="thumbnail" style="box-shadow: 1px 1px 0.5px 0.5px">
             <img style=" min-height: 175px; max-height: 250px; height:auto; width: 100%; "  src = "<%= campground.image %>">
            <div class="caption" style="color: black">
               <h4 ><%= campground.name %></h4>
            </div>
            <p>
                <a id="arch" href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
            </p>
        </div>
        </div>
    <% }); %>
    </div>
</div>
<br />
<footer style="position: relative">
  <p>
    GallerisA, copyright &copy; 2017  </p>
</footer>
</html>
