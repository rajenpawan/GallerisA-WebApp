<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit comment</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground_id%>/comments/<%= comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>" autofocus>
                </div>
                <div class="form-group">
                    <button id="arch" class="btn btn-lg btn-primary btn-primary">Submit!</button>
                </div>
            </form>
            <a id="arch" href="/campgrounds/<%= campground_id%>">Go back</a>
            
        </div>
    </div>
</div>

<% include ../partials/footer %>